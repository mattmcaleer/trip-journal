<% if @trip.errors.any? %>
  <% @trip.errors.full_messages.each do |m|%>
    <p><%= m %></p><br>
  <%end%>
<%end%>

<div class="form">
<%= form_for @trip do |f| %>
  <%= f.text_field :place_name, placeholder: "Where to?" %>
  <%= f.date_select :date %><br>
  <%= "Add an image:" %>
  <%= f.file_field :image, accept: 'image/png, image/gif, image/jpeg' %><br>
  <%= f.text_area :details, class: "textarea", placeholder: "Add some details for your trip..." %><br>
  <%= f.submit %>
<% end %>
</div>